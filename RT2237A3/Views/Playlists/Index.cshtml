@model IEnumerable<RT2237A3.Models.PlaylistBaseViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>List of Playlists</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
  <table class="table">
      <thead>
          <tr>

              <th>@Html.DisplayNameFor(model => model.Name)</th>
              <th>@Html.DisplayNameFor(model => model.TracksCount)</th>
              <th></th>
          </tr>
      </thead>
      <tbody>
          @foreach (var playlist in Model)
          {
          <tr>
              <td>@playlist.Name</td>
              <td><span class="badge bg-primary">@playlist.TracksCount</span></td>
              <td>
                  @Html.ActionLink("Edit", "Edit", new { id=playlist.PlaylistId }) |
                  @Html.ActionLink("Details", "Details", new { id = playlist.PlaylistId })
              </td>
          </tr>
          }
      </tbody>
  </table>
